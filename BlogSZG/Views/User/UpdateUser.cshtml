
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model EntityLayer.User

<div class="col-xl-8 col-lg-10 col-md-12 col-sm-12">
    <div class="bg-white tm-block">
        <div class="row">
            <div class="col-12">
                <h2 class="tm-block-title d-inline-block">Üye Düzenle</h2>
            </div>
        </div>
        <div class="row mt-4 tm-edit-product-row">
            <div class="col-xl-7 col-lg-7 col-md-12">
                <form asp-action="_UpdateUser" asp-controller="User" method="POST" class="tm-edit-product-form">
                    <div class="input-group mb-3">
                        <label for="name" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">
                            Ad
                        </label>
                        <input id="name" asp-for="Name" type="text" class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" value="@Model.Name">
                    </div>
                    <div class="input-group mb-3">
                        <label for="surname" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">
                            Soyad
                        </label>
                        <input id="surname" asp-for="Surname" type="text" class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" value="@Model.Surname">
                    </div>
                    <div class="input-group mb-3">
                        <label for="username" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">
                            Kullanıcı
                            Adı
                        </label>
                        <input id="username" asp-for="Username" type="text" class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" value="@Model.Username">
                    </div>
                    <div class="input-group mb-3">
                        <label for="password" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">
                            Şifre
                        </label>
                        <input id="password" asp-for="Password" type="text" class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" value="@Model.Password">
                    </div>
                    <div class="input-group mb-3">
                        <label for="mail" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">
                            Mail
                        </label>
                        <input id="mail" asp-for="Mail" type="text" class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" value="@Model.Mail">
                    </div>
                    <div class="input-group mb-3">
                        <label for="profileimg" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">
                            Profil Resmi
                        </label>
                        <input id="profile_img" asp-for="ProfileImg" type="text" class="form-control validate col-xl-9 col-lg-8 col-md-7 col-sm-7" value="@Model.ProfileImg">
                    </div>
                    <div class="input-group mb-3">
                        <div class="ml-auto col-xl-8 col-lg-8 col-md-8 col-sm-7 pl-0">
                            <button type="submit" class="btn btn-primary">
                                Kaydet
                            </button>
                        </div>
                    </div>
                    <input asp-for="UserId" type="hidden" value="@Model.UserId" />
                    <input asp-for="RegisterDate" type="hidden" value="@Model.RegisterDate" />
                </form>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-12 mx-auto mb-4">
                <div class="tm-product-img-dummy mx-auto">
                    <i class="fas fa-5x fa-cloud-upload-alt" onclick="document.getElementById('fileInput').click();"></i>
                </div>
                <div class="custom-file mt-3 mb-3">
                    <input id="fileInput" type="file" style="display:none;" />
                    <input type="button" class="btn btn-primary d-block mx-auto" value="Upload ..." onclick="document.getElementById('fileInput').click();" />
                </div>
            </div>
        </div>
    </div>
</div>
