
@model EntityLayer.About
<div class="row tm-row tm-mb-45">
    <div class="col-12">
        <hr class="tm-hr-primary tm-mb-55">
        <img src="@Model.AboutImg" alt="Image" class="img-fluid w-100">
    </div>
</div>

<div class="row tm-row tm-mb-40">
