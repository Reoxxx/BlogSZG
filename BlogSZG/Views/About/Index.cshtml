        <div class="mb-4">
            <h2 class="pt-2 tm-mb-40 tm-color-primary tm-post-title">Hakkında</h2>
            <p>@Model.AboutContent</p>
            <p>@Model.AboutContent1</p>
            <p>@Model.AboutContent2</p>
        </div>
    </div>
</div>

@await Component.InvokeAsync("AboutAuthors")




